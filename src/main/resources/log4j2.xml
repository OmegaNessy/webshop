<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">

    <Properties>
        <property name="console-pattern">%d{HH:mm:ss} [%t] %-5level %logger{5} - %msg%n</property>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${console-pattern}"/>
        </Console>
    </Appenders>
    <Loggers>
        <!-- Root Logger -->
        <Root level="debug">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>


</Configuration>